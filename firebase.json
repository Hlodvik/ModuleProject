{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/u/**",
        "destination": "/html/profile.html"
      },
      {
        "source": "/co/**",
        "destination": "/html/community.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}