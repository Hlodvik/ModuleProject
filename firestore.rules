rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read & write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow reads for authenticated users, but prevent unauthorized writes
    match /{document=**} {
      allow read: if request.auth != null;  // Only logged-in users can read data
      allow write: if request.auth != null; // All logged-in users can write (for testing)
    }
  }
}